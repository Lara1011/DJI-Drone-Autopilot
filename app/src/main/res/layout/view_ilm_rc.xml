<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="654dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_ILM_BatteryTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="battery"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_SpeedTxt"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="speed"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_DistanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="distance"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_XTxt"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="x"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_YTxt"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="y"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_ZTxt"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="z"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_PitchTxt"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="pitch"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_RollTxt"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="roll"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_YawTxt"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="yaw"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_ILM_DateTxt"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="time&amp;date"
                android:textColor="@color/black" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_ILM_BatteryInt"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0per"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_SpeedInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0_m_s"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_DistanceInt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0_m"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_XInt"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_YInt"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_ZInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_PitchInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_RollInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_YawInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textView_ILM_DateInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time_date"
                android:textColor="#FF0000" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btn_ILM_Take_Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/round_btn"
            android:text="@string/take_off"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_ILM_GoTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Land"
            android:background="@drawable/round_btn"
            android:text="@string/go_to"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_ILM_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Take_Off"
            android:background="@drawable/round_btn"
            android:text="@string/stop"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_ILM_Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/btn_ILM_Stop"
            android:background="@drawable/round_btn"
            android:text="@string/land"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_ILM_Record"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/ilmstartrecord"
            tools:layout_editor_absoluteY="365dp" />

        <Button
            android:id="@+id/btn_ILM_LoadCSV"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:text="CSV"
            android:layout_toEndOf="@+id/btn_ILM_Record" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="391dp"
        android:layout_height="206dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="199dp">

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/videoFeedView_ILM"
                android:layout_width="390dp"
                android:layout_height="195dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp" />

            <View
                android:id="@+id/view_ILM_coverView"
                android:layout_width="391dp"
                android:layout_height="211dp"
                android:background="@color/black"
                android:visibility="visible" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="243dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView_ILM_Latitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:text="@string/latitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Longitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Latitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp"
            android:text="@string/longitude_0"
            android:textColor="#FF1100" />

        <TextView
            android:id="@+id/textView_ILM_Altitude"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ILM_Longitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="altitude_0"
            android:textColor="#FF1100" />
    </RelativeLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/mapView_ILM"
        titlesource='Mapnik'
        android:layout_width="252dp"
        android:layout_height="174dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/btn_ILM_Waypoint"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_marginEnd="184dp"
        android:background="@drawable/ilmwaypointslist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
        />

    <Button
        android:id="@+id/btn_ILM_camera_controls"
        android:layout_width="82dp"
        android:layout_height="39dp"
        android:layout_toEndOf="@id/btn_ILM_Waypoint"
        android:text="Adjust Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ILM_Waypoint" />

    <LinearLayout
        android:id="@+id/cameraControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ILM_camera_controls"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_ILM_camera_pitch_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/btn_ILM_camera_yaw_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/btn_ILM_camera_roll_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <!-- Minus buttons -->
        <Button
            android:id="@+id/btn_ILM_camera_pitch_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/btn_ILM_camera_yaw_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <Button
            android:id="@+id/btn_ILM_camera_roll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/waypointButtonsLayout"
        android:layout_width="148dp"
        android:layout_height="147dp"
        android:layout_below="@+id/btn_ILM_Waypoint"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_ILM_Waypoint"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/mapView_ILM">


        <Button
            android:id="@+id/btn_ILM_Add_Waypoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="99dp"
            android:background="@drawable/round_btn"
            android:text="@string/add_waypoint"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ILM_Repeat_Route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_ILM_Add_Waypoint"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/round_btn"
            android:text="@string/repeat_route"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ILM_Change_Waypoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_ILM_Repeat_Route"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/round_btn"
            android:text="@string/change_waypoint"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_ILM_Remove_Waypoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_ILM_Change_Waypoint"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/round_btn"
            android:text="@string/remove_waypoint"
            android:textColor="@color/common_text_color"
            android:textSize="15sp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>